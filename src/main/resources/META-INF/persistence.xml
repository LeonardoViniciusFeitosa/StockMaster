<?xml version="1.0" encoding="UTF-8"?>
    <persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      version="3.0" 
      xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
      <persistence-unit name="stockmaster">
          
          <class>br.com.stockmaster.stockmasterdb.classes.User</class>
          <class>br.com.stockmaster.stockmasterdb.classes.Customer</class>
          <class>br.com.stockmaster.stockmasterdb.classes.Employer</class>
          <class>br.com.stockmaster.stockmasterdb.classes.Product</class>
          <class>br.com.stockmaster.stockmasterdb.classes.Sale</class>
          <class>br.com.stockmaster.stockmasterdb.classes.StockEntry</class>
          <class>br.com.stockmaster.stockmasterdb.classes.StockOut</class>
          <class>br.com.stockmaster.stockmasterdb.classes.Supplier</class>
      

        <properties>
          <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
          <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/StockMasterDB" />
          <property name="jakarta.persistence.jdbc.user" value="root" />
          <property name="jakarta.persistence.jdbc.password" value="Leonardo@11" />

          <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
      </persistence-unit>
    </persistence>